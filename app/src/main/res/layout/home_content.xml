<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_favoriteusers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_favorite_users"
        android:textSize="20sp"
        style="@style/boldText"

        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btn_shows_favoriteusers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        style="@style/tintColor"
        android:background="@color/transparant"

        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/text_favoriteusers"
        app:layout_constraintBottom_toBottomOf="@id/text_favoriteusers"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_favoriteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        tools:listitem="@layout/item_list_user_horizontal"
        tools:itemCount="5"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_favoriteusers"/>

    <TextView
        android:id="@+id/text_null_favoriteuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_null_favoriteuser"
        android:textAlignment="center"
        android:visibility="invisible"

        app:layout_constraintStart_toStartOf="@id/shimmer_list_horizontal"
        app:layout_constraintEnd_toEndOf="@id/shimmer_list_horizontal"
        app:layout_constraintTop_toTopOf="@id/shimmer_list_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/shimmer_list_horizontal"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_list_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_favoriteusers">

        <include layout="@layout/list_shimmer_horizontal"/>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <TextView
        android:id="@+id/text_moreusers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_more_users"
        android:textSize="20sp"
        style="@style/boldText"

        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_list_horizontal"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/btn_shows_moreusers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow"
        style="@style/tintColor"
        android:background="@color/transparant"

        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/text_moreusers"
        app:layout_constraintBottom_toBottomOf="@id/text_moreusers"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_moreusers">

        <include layout="@layout/list_shimmer"/>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_userList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_list_user_vertical"
        android:visibility="invisible"
        tools:itemCount="3"

        app:layout_constraintTop_toBottomOf="@id/text_moreusers"/>

</androidx.constraintlayout.widget.ConstraintLayout>