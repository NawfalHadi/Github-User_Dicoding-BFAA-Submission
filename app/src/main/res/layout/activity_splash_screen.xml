<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_screen"
    tools:context=".presentation.ui.splashscreen.SplashScreenActivity">

    <View
        android:id="@+id/view_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@id/tv_github"
        app:layout_constraintBottom_toBottomOf="@id/tv_github"
        app:layout_constraintStart_toStartOf="@id/tv_github"
        app:layout_constraintEnd_toEndOf="@id/tv_github"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_github"
        android:alpha="0.20"
        android:contentDescription="@string/backdrop_github_logo"
        app:layout_constraintStart_toStartOf="@id/view_center"
        app:layout_constraintTop_toTopOf="@id/view_center"
        app:layout_constraintBottom_toBottomOf="@id/view_center" />

    <TextView
        android:id="@+id/tv_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/github"
        style="@style/boldText"
        android:textSize="52sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>