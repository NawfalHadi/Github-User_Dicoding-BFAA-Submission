<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_viewgroup_vertical"
    android:layout_width="120dp"
    android:layout_height="150dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="-6dp"
    app:cardCornerRadius="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/itemIv_user_horizontal_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop"
            android:contentDescription="@string/cd_backdrop_avatar"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparant_black"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemIv_user_horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/btn_removed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:background="@color/transparant"

            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/itemIv_user_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/itemIv_user_horizontal"
            app:layout_constraintEnd_toEndOf="@id/itemIv_user_horizontal"
            android:contentDescription="@string/cd_remove_from_favorite"/>

        <TextView
            android:id="@+id/itemTv_name_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textStyle="bold"

            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>